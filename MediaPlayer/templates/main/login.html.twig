{% extends 'base.html.twig' %}

{% block title %}Se connecter{% endblock %}

{% block body %}

    <div style="width: 100%; max-width: 330px; padding: 15px; margin: auto; margin-top: 150px !important;" class="my-auto shadow p-3 mb-5 bg-white rounded">
        <form action="{{ path('login') }}" method="post" class="form-signin">
            <h1 class="h3 mb-3 font-weight-normal" style="color:#1e7e34;">Ecran de connexion</h1>
            <br>
            <label for="username" class="sr-only">Nom d'utilisateur</label>
            <input type="text" name="_username" id="username" class="form-control" placeholder="Nom d'utilisateur" required autofocus style="margin-bottom: 10px">
            <label for="password" class="sr-only">Mot de passe</label>
            <input type="password" name="_password" id="password" class="form-control" placeholder="Mot de Passe" required style="margin-bottom: 10px">

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
            {% if error %}
                <div style="color: red">Le nom d'utilisateur ou le mot de passe est incorrect</div>
                <br>
            {% endif %}
            <button class="btn btn-lg btn-primary btn-block" type="submit" style="margin-bottom: 10px;">Se connecter</button>
            <a href="{{ path('register') }}">S'enregistrer</a>
        </form>

    </div>

    {% endblock %}