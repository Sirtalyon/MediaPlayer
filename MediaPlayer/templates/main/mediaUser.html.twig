{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light shadow p-3 mb-5 bg-white rounded">
        <label class="navbar-brand" href="#">MEDIAPLAYER</label>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('main_index') }}">Accueil</a>
                </li>
                <li class="nav-item active">
                    <a class="nav-link" href="{{ path('media_list') }}">Mes Médias<span class="sr-only">(current)</span></a>
                </li>
            </ul>
            <ul class="navbar-nav" style="float: right;" >
                <li class="nav-item">
                    <a class="nav-link" href="{{ path(cheminConnexion) }}">{{ connecter }}</a>
                </li>

            </ul>
        </div>
    </nav>


    <div class=" row jumbotron">
        <div class="col-md-12">
            <h3>Table des Medias</h3><br>
        </div>
        <div class="col-md-12">
            <button type="button" style="float: right" class="btn btn-default btn-lg" onclick="window.location='{{ path("media_add") }}'">
                <span class="glyphicon glyphicon-plus" aria-hidden="true"></span>
            </button>
            <br><br><br><br>
        </div>

        <div class="col-md-12">
            <table id="mytable" class="table table-bordered table-striped">
                <thead>
                <th class="text-center">Image</th>
                <th class="text-center">Nom</th>
                <th class="text-center">Description</th>
                <th class="text-center">Date de création</th>
                <th class="text-center">Genre</th>
                <th class="text-center">Modifier</th>
                <th class="text-center">Supprimer</th>
                </thead>
                <tbody>

                {% for media in medias %}
                    {% set date = media.getDateCreated().format('Y-m-d H:i:s')%}
                    {% set genrevalue = media.getGenre().id %}
                    <tr>
                        <td><img src="PicUpload/{{ media.picture }}" width="120px" height="100px"></td>
                        <td>{{ media.name }}</td>
                        <td>{{ media.description }}</td>
                        <td>{{ date }}</td>
                        {% for genre in genres %}
                            {% if genre.getId() == genrevalue %}

                                <td>{{ genre.getName() }}</td>
                            {% endif %}
                        {% endfor %}
                        <td><p data-placement="top" data-toggle="tooltip" title="Edit"><button class="btn btn-primary btn-xs" data-title="Edit" data-toggle="modal" data-target="#edit" ><span class="glyphicon glyphicon-pencil"></span></button></p></td>
                        <td><p data-placement="top" data-toggle="tooltip" title="Delete"><button class="btn btn-danger btn-xs" data-title="Delete" data-toggle="modal" data-target="#delete" ><span class="glyphicon glyphicon-trash"></span></button></p></td>
                    </tr>
                {% endfor %}

                </tbody>
            </table>
        </div>


    </div>

{% endblock %}