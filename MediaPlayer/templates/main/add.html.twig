{% extends 'base.html.twig'  %}

{% block title %}COUCOU{% endblock %}

{% block body %}
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">MEDIAPLAYER</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li class="nav-item active">
                    <a class="nav-link" href="">Accueil<span class="sr-only">(current)</span></a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Mes Médias</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Ajouter Média</a>
                </li>
            </ul>
            <ul class="navbar-nav" >
                <li class="nav-item">
                    <a class="nav-link" href="{{ path(cheminConnexion) }}">{{ connecter }}</a>
                </li>

            </ul>

        </div>
    </nav>

    <div class="jumbotron text-center">
        <div class="col-md-12" style="padding-left: 30%; padding-right: 30%;">
                <h1>Ajouter un Média</h1>
                {{ form_start(formAdd) }}
                <div class="form-group">
                    {{ form_label(formAdd.name, 'Nom') }}
                    {{ form_widget(formAdd.name, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(formAdd.description, 'Description') }}
                    {{ form_widget(formAdd.description, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(formAdd.picture, 'Fichier Image') }}
                    {{ form_widget(formAdd.picture, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="form-group">
                    {{ form_label(formAdd.genre, 'Genre') }}
                    {{ form_widget(formAdd.genre, {'attr': {'class': 'form-control'}}) }}
                </div>
                <button class="btn btn-lg btn-primary btn-block" type="submit" style="margin-bottom: 10px;">Ajouter le média</button>
                {{ form_end(formAdd) }}
            </div>
    </div>
{% endblock %}
